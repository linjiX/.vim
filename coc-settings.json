{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "args": ["-v=-1"],
            "rootPatterns": [".ccls", "compile_commands.json", ".git/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "clang": {
                    "extraArgs": [
                        "-Wno-unused-variable",
                        "-isystem/Library/Developer/CommandLineTools/usr/include/c++/v1",
                        "-isystem/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include",
                        "-isystem/opt/emsdk/upstream/emscripten/system/include"
                    ],
                    "excludeArgs": ["-Werror"]
                },
                "diagnostic": {
                    "onOpen": 1,
                    "onChange": 1,
                    "onSave": 1
                }
            }
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["Dockerfile"],
            "args": ["--stdio"]
        }
    },

    "suggest.minTriggerInputLength": 1,
    "suggest.lowPrioritySourceLimit": 8,
    "suggest.highPrioritySourceLimit": 12,
    "suggest.echodocSupport": true,

    "diagnostic.checkCurrentLine": true,
    "diagnostic.messageTarget": "float",
    "diagnostic.locationlist": false,
    "diagnostic.signOffset": 100000,
    "diagnostic.errorSign": "E",
    "diagnostic.warningSign": "W",
    "diagnostic.infoSign": "I",
    "diagnostic.hintSign": "H",

    "signature.enable": true,
    "signature.target": "float",

    "workspace.ignoredFiletypes": ["log", "help"],

    "coc.preferences.hoverTarget": "float",
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,
    "coc.preferences.rootPatterns": [".git"],

    "coc.source.file.ignoreHidden": false,

    "snippets.extends": {
        "cpp": ["c"]
    },

    "coc.source.word.filetypes": ["markdown", "text", "log", "gitcommit", "conf", ""],

    "python.jediEnabled": false,
    "python.linting.enabled": false,
    "python.pythonPath": "python3",

    "yank.list.maxsize": 20,
    "yank.highlight.duration": 350,

    "translator.maxsize": 100,

    "imselect.defaultInput": "com.apple.keylayout.ABC",
    "imselect.enableFloating": false,

    "explorer.icon.enableNerdfont": true,
    "explorer.openAction.strategy": "sourceWindow",
    "explorer.file.autoReveal": false,
    "explorer.keyMappingMode": "none",
    "explorer.keyMappings": {
        "k": "nodePrev",
        "j": "nodeNext",

        "V": "toggleSelection",
        "<tab>": "actionMenu",

        "h": "collapse",
        "l": "expand",
        "J": ["toggleSelection", "normal:j"],
        "K": ["toggleSelection", "normal:k"],
        "gl": "expandRecursive",
        "gh": "collapseRecursive",
        "<CR>": "expandOrCollapse",
        "e": "open",
        "v": "openInVsplit",
        "t": "openInTab",
        "<BS>": "gotoParent",

        "yp": "copyFilepath",
        "yn": "copyFilename",
        "yy": "copyFile",
        "dd": "cutFile",
        "p": "pasteFile",
        "dD": "delete",
        "DD": "deleteForever",

        "a": "addFile",
        "A": "addDirectory",
        "cw": "rename",

        ".": "toggleHidden",
        "zh": "toggleHidden",
        "r": "refresh",

        "?": "help",
        "q": "quit",
        "O": "systemExecute",
        "gd": "listDrive",

        "f": "search",
        "F": "searchRecursive",

        "gf": "gotoSource:file",
        "gb": "gotoSource:buffer",

        "[[": "sourcePrev",
        "]]": "sourceNext",

        "[j": "diagnosticPrev",
        "]j": "diagnosticNext",

        "[c": "gitPrev",
        "]c": "gitNext",
        "<<": "gitStage",
        ">>": "gitUnstage"
    }
}
